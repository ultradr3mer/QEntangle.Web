@model ChoicesListViewModel
@{
  ViewData["Title"] = "Choice List";
}

<div class="equalize-bottom-margin">
  <div class="row">
    <div class="col-12 col-md-6">
      <h1>Add choice</h1>
      <hr />
    </div>
  </div>

  <partial name="_PostChoice" model="null" />

  @if (Model.Unevaluated.Any())
  {
    <div class="row">
      <div class="col-12">
        <h1>Unevaluated choices</h1>
        <hr />
      </div>
    </div>
  }

  <div class="row">
    @foreach (var choice in Model.Unevaluated)
    {
      <div class="col-12 col-md-6 col-xl-3 mb-3">
        <div class="choice-container">
          <h3>@choice.Name</h3>
          <div class="row row-mlr-1">
            @foreach (var option in choice.Options)
            {
              <div class="col-auto col-plr-1 mt-1 mb-1">
                <div class="option @(option.IsDefinitive ? " option-definitive" : string.Empty)">@option.Name</div>
              </div>
            }
          </div>
          <div class="clearfix mt-2">
            <a class="btn btn-primary float-right clearfix" role="button" asp-controller="choice" asp-action="evaluate" asp-route-id="@choice.Id"><img src="~/icons/bolt_black_24dp.svg"/></a>
          </div>
        </div>
      </div>
    }
  </div>

  @if (Model.Evaluated.Any())
  {
    <div class="row">
      <div class="col-12">
        <h1>Evaluated choices</h1>
        <hr />
      </div>
    </div>
  }

  <div class="row">
    @foreach (var choice in Model.Evaluated)
    {
      <div class="col-12 col-md-6 col-xl-3 mb-3">
        <div class="choice-container">
          <h3>@choice.Name</h3>
          <div class="row row-mlr-1">
            @foreach (var option in choice.Options)
            {
              <div class="col-auto col-plr-1 mt-1 mb-1">
                <div class="option @(option.IsDefinitive ? " option-definitive" : string.Empty)">@option.Name</div>
              </div>
            }
          </div>
          <div class="row">
          </div>
        </div>
      </div>
    }
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
